{
  "name": "speaksharp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 5173",
    "dev:test": "vite --mode test --port 5173 --host --clearScreen false",
    "build": "vite build",
    "preview": "vite preview",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run --coverage --pool=threads --poolOptions.threads=4",
    "test:unit:watch": "vitest --coverage --pool=threads --poolOptions.threads=4",
    "test:e2e": "TS_NODE_PROJECT=tsconfig.e2e.json tsx node_modules/.bin/playwright test --config playwright.config.ts",
    "test:e2e:quick": "TS_NODE_PROJECT=tsconfig.e2e.json tsx node_modules/.bin/playwright test --timeout=8000 --workers=1 --grep='anonymous'",
    "test:e2e:ci": "timeout 90 TS_NODE_PROJECT=tsconfig.e2e.json tsx node_modules/.bin/playwright test --timeout=8000 --workers=1",
    "test:audit": "./run-tests.sh",
    "test:audit:ci": "CI=true ./run-tests.sh",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "validate": "pnpm lint && pnpm type-check && pnpm test:unit",
    "prepare": "husky install",
    "postinstall": "msw init public/ --no-save"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@sentry/react": "^10.11.0",
    "@stripe/react-stripe-js": "^4.0.2",
    "@stripe/stripe-js": "^7.9.0",
    "@supabase/supabase-js": "^2.38.0",
    "@xenova/transformers": "^2.17.2",
    "jspdf": "^3.0.2",
    "jspdf-autotable": "^5.0.2",
    "posthog-js": "^1.264.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "recharts": "^3.2.0",
    "sonner": "^2.0.7",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@tailwindcss/vite": "^4.1.13",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node-fetch": "^2.6.4",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/eslint-plugin": "^1.3.9",
    "@vitest/ui": "^2.1.9",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "concurrently": "^9.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "happy-dom": "^12.10.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.7",
    "lucide-react": "^0.543.0",
    "msw": "^2.0.0",
    "next-themes": "^0.4.6",
    "node-fetch": "^3.3.2",
    "pino": "^9.9.5",
    "tailwind-merge": "^3.3.1",
    "tsx": "^4.20.5",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.43.0",
    "vite": "^5.0.8",
    "vitest": "^2.1.9"
  },
  "msw": {
    "workerDirectory": "public"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{ts,tsx}": [
      "bash -c \"tsc --noEmit\""
    ]
  }
}
