{
  "name": "speaksharp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:test": "vite --mode test --port 5173 --host --clearScreen false",
    "build": "vite build",
    "preview": "vite preview",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run --coverage --pool=threads --poolOptions.threads=4",
    "test:unit:watch": "vitest --coverage --pool=threads --poolOptions.threads=4",
    "test:e2e": "playwright test",
    "test:audit": "playwright test",
    "test:audit:ci": "CI=true ./run-tests.sh",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "validate": "pnpm lint && pnpm type-check && pnpm test:unit",
    "prepare": "husky install",
    "postinstall": "msw init public/ --no-save && pnpm exec playwright install --with-deps"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@sentry/react": "^10.12.0",
    "@stripe/react-stripe-js": "^4.0.2",
    "@stripe/stripe-js": "^7.9.0",
    "@supabase/supabase-js": "^2.57.4",
    "@xenova/transformers": "^2.17.2",
    "date-fns": "^4.1.0",
    "jimp": "^0.22.10",
    "jspdf": "^3.0.2",
    "jspdf-autotable": "^5.0.2",
    "posthog-js": "^1.266.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1",
    "recharts": "^3.2.1",
    "sonner": "^2.0.7",
    "vaul": "^1.1.2"
  },
  "optionalDependencies": {
    "sharp": "0.33.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.38.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/vite": "^4.1.13",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/eslint-plugin": "^1.3.12",
    "@vitest/ui": "^2.1.9",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "concurrently": "^9.2.1",
    "dotenv": "^16.6.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "happy-dom": "^12.10.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.7",
    "lucide-react": "^0.543.0",
    "msw": "^2.11.2",
    "next-themes": "^0.4.6",
    "node-fetch": "^3.3.2",
    "pino": "^9.9.5",
    "postcss": "^8.5.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.44.0",
    "vite": "^5.4.20",
    "vitest": "^2.1.9"
  },
  "msw": {
    "workerDirectory": "public"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{ts,tsx}": [
      "bash -c \"tsc --noEmit\""
    ]
  }
}
