    "pdf-lib": "^1.17.1",
    "pdf-parse": "^2.4.5",
    "pino": "^9.9.5",
    "postcss": "^8.5.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.18",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.3"
  },
  "msw": {
    "workerDirectory": "frontend/public"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{ts,tsx}": [
      "bash -c \"tsc --noEmit\""
    ]
  },
  "pnpm": {
    "overrides": {
      "rimraf": "^5.0.0",
      "node-domexception": "^2.0.2",
      "glob": ">=10.5.0"
    },
    "patchedDependencies": {
      "whisper-turbo@0.11.0": "patches/whisper-turbo@0.11.0.patch"
    }
  }
}