{
  "name": "speaksharp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "// ============ Development ============": "",
    "setup": "pnpm install --frozen-lockfile",
    "generate-promo": "tsx scripts/generate-promo.ts",
    "dev": "cd frontend && vite",
    "// ============ Build ============": "",
    "prebuild": "node scripts/validate-env.mjs",
    "build": "cd frontend && vite build --mode production",
    "prebuild:test": "node scripts/validate-env.mjs",
    "build:test": "cd frontend && vite build --mode test",
    "preview": "cd frontend && vite preview",
    "preview:test": "cd frontend && vite preview --mode test",
    "// ============ Quality ============": "",
    "lint": "eslint 'frontend/src/**/*.{js,jsx,ts,tsx}' 'tests/**/*.{js,jsx,ts,tsx}' 'backend/supabase/functions/**/*.ts' --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint 'frontend/src/**/*.{js,jsx,ts,tsx}' 'tests/**/*.{js,jsx,ts,tsx}' --fix",
    "typecheck": "cd frontend && tsc --noEmit",
    "// ============ Testing ============": "",
    "test": "pnpm test:unit",
    "test:unit": "echo 'NOTE: Running Unit and Component Integration tests...' && cd frontend && vitest run --coverage",
    "test:integration": "pnpm test:live -- tests/live/**/*.integration.live.spec.ts",
    "// E2E (Mocked)": "",
    "test:e2e": "playwright test tests/e2e",
    "test:e2e:ui": "playwright test tests/e2e --ui",
    "test:e2e:debug": "cross-env DEBUG=pw:api DOTENV_CONFIG_PATH=.env.test playwright test --headed --trace on --project=chromium",
    "// Live (Real APIs)": "",
    "test:live": "cross-env VITE_USE_LIVE_DB=true REAL_WHISPER_TEST=true playwright test tests/live --config=playwright.live.config.ts",
    "test:live:headed": "cross-env VITE_USE_LIVE_DB=true REAL_WHISPER_TEST=true playwright test tests/live --headed",
    "// Canary (Production Smoke)": "",
    "test:canary": "playwright test tests/canary --config=playwright.canary.config.ts",
    "test:canary:prod": "cross-env BASE_URL=https://speaksharp.app pnpm test:canary",
    "// Soak (Performance)": "",
    "test:soak": "playwright test --config=playwright.soak.config.ts --project=chromium",
    "// CI Shortcuts": "",
    "ci:local": "./scripts/test-audit.sh ci-simulate",
    "ci:local:full": "pnpm ci:local && pnpm test:live && pnpm test:canary",
    "test:all": "./scripts/test-audit.sh local",
    "test:health-check": "./scripts/test-audit.sh health-check",
    "pw:install": "playwright install chromium --with-deps",
    "pw:install:all": "playwright install --with-deps",
    "// ============ Git Hooks ============": "",
    "prepare": "HUSKY=0 husky install"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@sentry/react": "^10.27.0",
    "@stripe/react-stripe-js": "^4.0.2",
    "@stripe/stripe-js": "^7.9.0",
    "@supabase/supabase-js": "^2.86.0",
    "@tanstack/react-query": "^5.90.5",
    "@xenova/transformers": "^2.17.2",
    "assemblyai": "^4.16.1",
    "clsx": "^2.1.1",
    "compromise": "^14.14.5",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.6.0",
    "file-saver": "^2.0.5",
    "framer-motion": "^12.23.26",
    "jspdf": "^3.0.2",
    "jspdf-autotable": "^5.0.2",
    "kill-port": "^2.0.1",
    "posthog-js": "^1.298.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1",
    "recharts": "^3.5.0",
    "sonner": "^2.0.7",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^1.1.2",
    "whisper-turbo": "^0.11.0",
    "whisper-webgpu": "^0.10.0",
    "zustand": "^5.0.9"
