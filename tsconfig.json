{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "allowJs": false,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vitest/globals"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src", "tests"],
  "exclude": [
    "playwright.config.ts",
    "tailwind.config.ts",
    "tests/global-teardown.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
